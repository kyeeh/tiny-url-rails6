<p id="notice"><%= notice %></p>

<h1>Links</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th>TinyUrl</th>
      <th>Token</th>
      <th>Clicks</th>
      <th>Last Client IP</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link_to link.url, link.url, target: :_blank %></td>
        <td><%= link_to link.short, tiny_path(link.token), target: :_blank %></td>
        <td><%= link.token %></td>
        <td><%= link.clicks %></td>
        <td><%= link.last_client_ip %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>
